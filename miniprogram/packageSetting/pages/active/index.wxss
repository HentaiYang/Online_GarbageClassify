/* packageSetting/pages/active/index.wxss */
.Active{
  height: 100px;
  border-radius: 20px;
  padding: 0px;
}
.Active image{
  position: absolute;
  width: 100%;
  height: inherit;
}
.activeTextContent{
  position: relative;
  left: 40%;
  backdrop-filter: blur(5px);

  height: inherit;
}
.activeTextContentTitle{
  padding: 5px 15px;
  color: #ffffff;
}
.activeTextContentTitle view:nth-child(1){
  font-size: var(--font-large);
  font-weight: 700;
}
.activeTextContentConfirm{
  position: relative;
  font-weight: 700;
  left: 15px;
  top: 10px;
}