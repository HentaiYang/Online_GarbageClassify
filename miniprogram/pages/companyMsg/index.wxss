/* miniprogram/pages/companyMsg/index.wxss */
.card {
  width: 650rpx;
  padding: 15px;
  margin: 0 auto;
  min-width: 10px;
  min-height: 50px;
  background: #FFFFFF;
  border-radius: 17px;
}
.title{
  margin: 9px 0 15px 15px;
  font-size: 17px;
  color: rgba(11,11,10,0.8);
}
.name {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.companyName{
  font-size: 20px;
  color: rgba(11,11,10);
}
.phone{
  opacity: 0.7;
  margin-right: 50px;
  margin-top: 7px;
}
.line {
  width: 100%;
  height: 2rpx;
  margin-top: 5px;
  background: rgba(11, 11, 10, 0.7);
}
.toLocation{
  margin-top: 7px;
  color: rgba(11, 11, 10, 0.7);
}
.value{
  margin-top: 9px;
  display: flex;
  justify-content: space-between;
}
