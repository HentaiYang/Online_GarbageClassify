.reclaimFormIconImage {
  width: 50px;
  height: 50px;
}
.reclaimFormIconContent{
  width: 50px;
  height: 50px;
  border-radius: 50px;
  overflow: hidden;
}


.active {
  background-color: #88DBA3;
  box-shadow: 0px 0px 15px #88DBA3;
}

.textActive {
  color: #88DBA3;
  font-weight: 700;
}

.reclaimFormRequestImage {
  width: 60px;
  height: 60px;
}
.reclaimFormRequestContent{
  width: 60px;
  height: 60px;
  border-radius: 60px;
  overflow: hidden;
}


/* 重量 */
.reclaimFormWeightContent{
  width: 100px;
  height: 48px;
  text-align: center;
  line-height: 48px;
  font-size: var(--font-normal);
  font-weight: 700;
  background-color: #F1F1F1;
  border-radius: 10px;
}
.WeightActive{
  background-color: #88DBA3;
}
.WeightTextActive{
  color: #ffffff;
}

.selectedDate{
  text-align: center;
  font-size: var(--font-middle);
  font-weight: 700;
  margin-top: 10px;
}

/*  */
.orderButton{
  padding: 5px 10px;
  background-color: #88DBA3;
  color: #ffffff;
  border-radius: 10px;
  height: 40px;
  line-height: 40px;
  font-weight: 700;
}

.formConfirmShow{
  width: 80%;
  height: 50%;
  padding: 15px;
  line-height: 25px;
}
.formConfirmButton{
  display: flex;
  justify-content: space-between;
  width: 283px;
}
.confirmTitle{
  display: flex;
  flex-direction: row-reverse;
  padding-right: 20px;
  padding-top: 20px;
  font-size: var(--font-normal);
}