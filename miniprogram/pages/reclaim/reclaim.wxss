/* pages/reclaim/reclaim.wxss */
page {
  width: 750rpx;
  height: 100%;
  overflow: hidden;
  background: #FFFFFF;
}
.importInfo{
  text-align: center;
  opacity: 0.7;
  font-size: 13px;
}
.time {
  width: 100%;
  margin-top: 10px;
  margin-left: 15px;
  margin-right: 15px;
  color: rgba(0, 0, 0, 0.6);
  font-size: 12px;
}

.line {
  width: 100%;
  height: 2rpx;
  margin-top: 5px;
  background: rgba(0, 0, 0, 0.6);
}
.others{
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 5px;
}

.group{
  display: flex;
  margin-top: 15px;
}
.card{
  padding: 15px;
  margin: 0 auto;
  border-radius: 15px;
}
.one, .two, .three, .four{
  display: flex;
  width: 270rpx;
  height: 170rpx;
  background: rgba(241, 241, 241, 0.7);
  box-shadow:  0 3px 6px rgba(0, 0, 0, 0.16);
}
.images{
  width: 48px;
  height: 48px;
  align-self: center;
}
.garbages{
  margin-left: 5px;
  align-self: center;
  font-size: 20px;
  color: #44633F;
}
.main{
  margin: 0 auto;
  margin-top: 20px;
  padding: 20px;
  padding-bottom: 50px;
  background: #FFFFFF;
  border-radius: 30px 30px 0px 0px;
  box-shadow:  0 -3px 6px rgba(0, 0, 0, 0.16);
}
.desc{
  width: 264rpx;
  margin: 0 auto;
  color: #1E85EC;
}
.title{
  font-size: 20px;
  text-align: center;
}
.info{
  font-size: 12px;
  text-align: center;
}
.five,
 .six{
  padding: 0;
  width: 240rpx;
  height: 240rpx;
  border-radius: 100px;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.16);
}
.reclaimText{
  width: 100px;
  height: 100px;
  color: #FFFFFF;
  font-size: 20px;
  font-weight: 600;
  margin: 0 auto;
  line-height: 100px;
}
.reclaimImgContent{
  margin: 0 auto;
  margin-left: 15px;
}
.reclaimImg{
  width: 100px;
  height: 100px;
}
.select{
  background-image: linear-gradient(to right,#1E85EC,#BFDFFF);
  border-radius: 10px;
  margin: 0 auto;
  height: 100px;
  margin-top: 10px;
}
